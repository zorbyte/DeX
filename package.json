{
  "name": "securitas-bot",
  "version": "0.0.5",
  "description": "A security Discord bot",
  "main": "./dist/src/index.js",
  "scripts": {
    "start": "tsc && node .",
    "lint": "xo ./src",
    "installDepsMac": "CXXFLAGS=\"-mmacosx-version-min=10.9\" LDFLAGS=\"-mmacosx-version-min=10.9\" yarn install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zorbyte/DeX.git"
  },
  "author": "zorbyte",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zorbyte/DeX/issues"
  },
  "homepage": "https://github.com/zorbyte/DeX#readme",
  "xo": {
    "extends": ["xo-typescript"],
    "esnext": true,
    "semicolon": true,
    "space": true,
    "prettier": false,
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "double",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
      ],
      "prefer-template": "error",
      "template-curly-spacing": "error",
      "no-var": "error",
      "indent": [
        "error",
        2
      ],
      "@typescript-eslint/indent": [
        "error",
        2
      ],
      "lines-between-class-members": [
        "error",
        "always",
        {
          "exceptAfterSingleLine": true
        }
      ],
      "unicorn/filename-case": "off",
      "import/newline-after-import": "off",
      "import/first": "off",
      "@typescript-eslint/member-ordering": {
        "default": [
          "field",
          "constructor",
          "method"
        ]
      },
      "curly": [
        "error",
        "multi"
      ],
      "@typescript-eslint/member-naming": "off",
      "unicorn/explicit-length-check": "off",
      "new-cap": "off",
      "6river/new-cap": [
        "error",
        {
          "capIsNewExceptionPattern": "^@"
        }
      ],
      "operator-linebreak": [
        "error",
        "before"
      ],
      "padding-line-between-statements": "off",
      "@typescript-eslint/promise-function-async": "off",
      "generator-star-spacing": [
        "error",
        {
          "before": false,
          "after": false
        }
      ],
      "@typescript-eslint/no-extraneous-class": "off",
      "no-void": "off",
      "@typescript-eslint/generic-type-naming": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_"
        }
      ],
      "no-console": ["error"],
      "no-dupe-class-members": "off",
      "@typescript-eslint/unified-signatures": "off"
    },
    "plugins": [
      "6river"
    ],
    "extensions": [
      "ts"
    ]
  },
  "dependencies": {
    "@keyv/redis": "^1.3.8",
    "canvas": "^2.5.0",
    "captchagen": "^1.2.0",
    "chalk": "^2.4.2",
    "clean-stack": "^2.1.0",
    "debug": "^4.1.1",
    "didyoumean2": "^3.1.1",
    "discord.js": "discordjs/discord.js",
    "dotenv": "^8.0.0",
    "fs-nextra": "^0.4.5",
    "keyv": "^3.1.0",
    "koa-compose": "^4.1.0",
    "microframework-w3tec": "^0.6.3",
    "rethinkdb-ts": "^2.4.0-rc.15",
    "unescape-js": "^1.1.1",
    "zucc": "^0.1.2"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/debug": "^4.1.4",
    "@types/dotenv": "^6.1.1",
    "@types/keyv": "^3.1.0",
    "@types/koa-compose": "^3.2.4",
    "@types/node": "^12.6.1",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "cross-env": "^5.2.0",
    "eslint-config-xo-typescript": "^0.15.0",
    "eslint-plugin-6river": "^1.0.6",
    "typescript": "^3.5.3",
    "xo": "^0.24.0"
  }
}
